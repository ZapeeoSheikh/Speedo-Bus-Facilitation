
@{
    ViewBag.Title = "BusNearMe";
}
<div class="well">
    <div class="jumbotron text-left" style="padding-left: 50px; padding-top: 150px; height: 500px; background-color: #003E5F; color: white ">

        <h1 style="font-weight: 600"> <i class="fa fa-map-marker"></i> Live Tracking </h1>
        <p>Please select your service to continue</p>
        <form class="form-inline">
            <div class="input-group">
                <div class="form-group">
                    <select name="SellerId" class="form-control">
                        <option value="0">- Please Select Services -</option>

                        <option value=""> Route No </option>
                        <option value=""> Bus No  </option>

                    </select>
                </div>
                <div class="input-group-btn">
                    <button type="button" style="background-color: #D02525;" class="btn "><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
    <div class="input-group col-lg-push-9 col-lg-3">
        <div class="">
            <input type="text" style="height: 50px;" class="form-control" size="50" placeholder="Route Name, Route Number, Bus Number" required>
            <div class="input-group-btn">
                <button type="button" style="background-color: #003E5F; color: white; width: 50px; height: 50px;" class="btn "><i class="fa fa-search"></i></button>
            </div>
        </div>
    </div>

    <div style="margin-top: 50px;">

        <table class="table table-fixed table-striped">
            <thead>
                <tr>
                    <th> Type</th>
                    <th> Route No</th>
                    <th> Bus No</th>
                    <th> Route Name </th>
                    <th> Stops Covered </th>
                    <th> Stops Left </th>
                    <th> Tracking </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i <= 28; i++)
                {
                    <tr>
                        <td><i class="fa fa-bus " style="font-size: 26px; color: #003e5f"></i></td>
                        <td> Route 250</td>
                        <td> FR-15</td>
                        <td><a href="\Home\LiveView" style="color: #003e5f"> Bhatti Chowk - RA Bazar </a></td>
                        <td> 30 </td>
                        <td> 22 </td>
                        <td><a href="\Home\LiveView" style="color: #003e5f"> Live Track </a></td>
                    </tr>
                }
            </tbody>

            <tfoot>
                <tr>
                    <th> Type</th>
                    <th> Route No</th>
                    <th> Bus No</th>
                    <th> Route Name </th>
                    <th> Stops Covered </th>
                    <th> Stops Left </th>
                    <th> Tracking </th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>